[color]
    diff = auto
    status = auto
    branch = auto
[include]
        path = .github.gitconfig
[push]
    default = matching
[alias]
	lg = log --color --graph --pretty=format:'%C(auto)%h -%d %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	d = difftool
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[commit]
	gpgsign = true
[gpg]
	program = gpg2
